@model LoginRequestDto
<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h2>Login</h2>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input type="text" class="form-control" asp-for="UserName" placeholder="username" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input type="password" class="form-control" asp-for="Password" placeholder="password" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="submit">Login</button>
            </div>
        </div>
    </div>
</form>

   
   
  