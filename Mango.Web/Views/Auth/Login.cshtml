@model LoginRequestDto
<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h2>Login</h2>
        </div>
       
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input type="text" class="form-control" asp-for="UserName" placeholder="username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input type="password" class="form-control" asp-for="Password" placeholder="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="submit">Login</button>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_validationscriptspartial.cshtml" />
}
   
  