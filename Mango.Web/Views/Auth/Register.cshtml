@model RegistrationRequestDto

<form method="post">
<div class="container border p-4">
    <div class="row text-center">
        <h2>Register</h2>
    </div>
   
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <input type="text" class="form-control" asp-for="Email" placeholder="Email" />
             <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <input type="text" class="form-control" asp-for="Name" placeholder="Name" />
             <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Phone number" />
             <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
             <span asp-validation-for="Password" class="text-danger"></span>
        </div>
         <div class="col-12 col-md-6 offset-md-3 pb-2">
            <select class="form-select" asp-for="Role" asp-items="ViewBag.RoleList">
                <option>--Select Role--</option>
            </select>
           
        </div>
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <button type="submit" class="form-control btn btn-success" value="submit">Register</button>
        </div>

    </div>


</div>   

</form>

@section Scripts
{
    <partial name="_validationscriptspartial.cshtml" />
}